<?xml version="1.0" encoding="UTF-8"?>
<project
  xmlns="http://maven.apache.org/DECORATION/1.7.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.7.0.xsd">

  <!-- Google Analytics not inherited for some reason -->
  <googleAnalyticsAccountId>UA-55015661-1</googleAnalyticsAccountId>

  <custom>
    <reflowSkin>
      <pages>
        <index project="reflow-maven-skin" combine.self="override">
          <shortTitle>Usage</shortTitle>
          <breadcrumbs>true</breadcrumbs>
          <!-- no ToC on the main index page -->
          <toc>false</toc>
          <sections>
            <columns>2</columns>
            <body />
          </sections>
        </index>
        <config>
          <toc>false</toc>
        </config>
        <layouts>
          <tocTopMax>-1</tocTopMax>
        </layouts>
        <themes-index>
          <toc>false</toc>
          <sections>
            <body />
            <thumbs>3</thumbs>
          </sections>
        </themes-index>
        <themes-bootswatch-cerulean>
          <theme>bootswatch-cerulean</theme>
          <toc offsetTop="225">top</toc>
        </themes-bootswatch-cerulean>
        <themes-bootswatch-cosmo>
          <theme>bootswatch-cosmo</theme>
        </themes-bootswatch-cosmo>
        <themes-bootswatch-cyborg>
          <theme>bootswatch-cyborg</theme>
        </themes-bootswatch-cyborg>
        <themes-bootswatch-darkly>
          <theme>bootswatch-darkly</theme>
        </themes-bootswatch-darkly>
        <themes-bootswatch-flatly>
          <theme>bootswatch-flatly</theme>
        </themes-bootswatch-flatly>
        <themes-bootswatch-journal>
          <theme>bootswatch-journal</theme>
        </themes-bootswatch-journal>
        <themes-bootswatch-lumen>
          <theme>bootswatch-lumen</theme>
        </themes-bootswatch-lumen>
        <themes-bootswatch-paper>
          <theme>bootswatch-paper</theme>
        </themes-bootswatch-paper>        
        <themes-bootswatch-readable>
          <theme>bootswatch-readable</theme>
          <toc offsetTop="250">top</toc>
        </themes-bootswatch-readable>
        <themes-bootswatch-simplex>
          <theme>bootswatch-simplex</theme>
        </themes-bootswatch-simplex>
        <themes-bootswatch-slate>
          <theme>bootswatch-slate</theme>
        </themes-bootswatch-slate>
        <themes-bootswatch-solar>
          <theme>bootswatch-solar</theme>
        </themes-bootswatch-solar>
        <themes-bootswatch-spacelab>
          <theme>bootswatch-spacelab</theme>
        </themes-bootswatch-spacelab>
        <themes-bootswatch-sandstone>
          <theme>bootswatch-sandstone</theme>
        </themes-bootswatch-sandstone>
        <themes-bootswatch-superhero>
          <theme>bootswatch-superhero</theme>
        </themes-bootswatch-superhero>
        <themes-bootswatch-united>
          <theme>bootswatch-united</theme>
        </themes-bootswatch-united>
        <themes-bootswatch-yeti>
          <theme>bootswatch-yeti</theme>
        </themes-bootswatch-yeti>
        <advanced>
          <sections>
            <body />
            <columns>2</columns>
            <body />
          </sections>
        </advanced>
        <toc-sidebar>
          <toc>sidebar</toc>
        </toc-sidebar>
      </pages>
    </reflowSkin>
  </custom>

  <body>

    <breadcrumbs>
      <item name="Maven skin" href="/" />
    </breadcrumbs>

  </body>
</project>
