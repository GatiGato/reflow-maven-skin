  <div class="main-body">
    <div class="row">
        <div class="col-xs-12 col-sm-2 col-md-2">
            <div class="nav-side-menu">
                <div class="brand">$config.menu.getAttribute("name")</div>
                <i class="fa fa-bars fa-2x toggle-btn" data-toggle="collapse" data-target="#menu-content"></i>
                <div class="menu-list">
                    <ul id="menu-content" class="menu-content collapse out">
                        #foreach ( $item in $config.menu.getChildren() )
                        #set ( $itemName = $item.getAttribute("href"))
                        <li>
                          <a href="$itemName"><span style="margin: 0 5px"></span>$item.getAttribute("name")</a>
                        </li>
                        #end
                </div>
            </div>
        </div>
        <div id="m-doc-frame" class="col-xs-12 col-sm-10 col-md-10">
        </div>
  </div>
