#**
 * Outputs navbar
 *
 *##macro ( renderNavbar )##
    <nav id="m-top-navbar" class="navbar navbar-expand-lg fixed-top ${pageContext.navbar.cssClass}">
        <div class="container">
##
## Insert brand if it is available
#*      *##if ( $pageContext.navbar.brandHref )
#*          *##currentFileRelativeLink ( $pageContext.navbar.brandHref )
            <a class="navbar-brand mb-0 h1" href="$currentFileRelativeLink">
#*          *##if ( $pageContext.navbar.image )
#*              *##currentFileRelativeLink( $pageContext.navbar.image.src )
                <img src="$currentFileRelativeLink" width="$pageContext.navbar.image.width" height="$pageContext.navbar.image.height" class="d-inline-block align-top" />
#*          *##end
                ${pageContext.navbar.brandName}
            </a>
#*      *##else
            <div class="navbar-brand mb-0 h1">
#*          *##if ( $pageContext.navbar.image )
#*              *##relativeLink( $pageContext.navbar.image.src )
                <img src="$relativeLink" width="$pageContext.navbar.image.width" height="$pageContext.navbar.image.height" class="d-inline-block align-top" />
#*          *##end
                ${pageContext.navbar.brandName}
            </div>
#*      *##end##
##
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#top-navbar-collapse-1" aria-controls="top-navbar-collapse-1" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="top-navbar-collapse-1">
                <ul class="nav navbar-nav ml-auto">
#*
  *##if ( $decoration.body.links )#*
      *##links ( $decoration.body.links)#*
  *##end#*

  *##if ( $decoration.body.menus )#*
    ## filter menus into the list if filterMenu="regex" is configured
      *##if ( $pageContext.navbar.filterMenu )#*
          *##filterMenus ( $decoration.body.menus, $pageContext.navbar.filterMenu )#*
      *##else#*
          *##set ( $filterMenus = $decoration.body.menus )#*
      *##end#*

      *##topMenu ( $filterMenus )#*
  *##end##
##
                </ul><!--/ul.navbar-nav -->
            </div><!--/.nav-collapse -->
        </div> <!--/.container -->
    </nav> <!--/.navbar -->
#end##
#*
 *
 * Creates dropdown menu items
 *
 *##macro ( topMenu $menus )#*
    *##foreach ( $menu in $menus )#*
      *##if ( $menu.name )#*
            ## check if one of the subtree items is the current one
            *##set ( $displayTree = false )#*
          *##displayTree ( $menu )##
            <li class="nav-item dropdown#if ( $displayTree ) active#end">
                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">$menu.name <b class="caret"></b></a>
                <div class="dropdown-menu">
#*              *##foreach ( $item in $menu.items )#*
                *##activeLink ( $item.href)#*
                    *##if ($item.items.isEmpty())##
                    <a href="$relativeLink" title="$item.name" #if( $target )target="$target"#end class="dropdown-item $activeClass">$item.name</a>
#*                  *##else##
                    <div class="dropdown-submenu $activeClass">
    #*                  *##link ( $relativeLink $item.name $item.target "dropdown-item")##
                        <div class="dropdown-menu">
    #*                  *##foreach ($subitem in $item.items)#*
                        *##activeLink ( $subitem.href )##
                            <a href="$relativeLink" title="$subitem.name" #if( $subitem.target )target="$subitem.target"#end class="dropdown-item $activeClass">$subitem.name</a>
    #*                  *##end##
                        </div>
                    </div>
#*                  *##end#*
                *##end##
                </div>
            </li>
#*      *##end#*
  *##end#*
*##end#*
