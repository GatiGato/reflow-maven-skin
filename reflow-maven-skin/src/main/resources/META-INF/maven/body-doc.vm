  ## put page and project slugs as classes to the <body>. This allows page-specific CSS customizations.
  <body class="page-$config.fileId project-$config.projectId m-page-type-$config.type m-sidenav-enabled m-tocsidebar-enabled" data-spy="scroll" data-offset="70" data-target=".m-toc-sidebar-container">

#navbar( )
##
  <div class="main-body">
    <div class="row">
        <div class="col-xs-12 col-sm-2 col-md-2">
            <div class="nav-side-menu navbar navbar-default">
                <div class="brand">$config.menu.getAttribute("name")</div>
                <i class="toggle-btn" data-toggle="collapse" data-target="#menu-content"></i>
                <div class="menu-list">
                    <ul id="menu-content" class="menu-content collapse out">
                        #set ( $counterMenu = 1)
                        #foreach ( $item in $config.menu.getChildren() )
                            #set ( $itemId = "m-navbar-menu_"+ $counterMenu)
                            #set ( $itemName = "")
                            #set ( $itemName = $item.getAttribute("href"))
                            #set ( $itemIcon = "spacer")
                            #set ( $itemIcon = $item.getAttribute("icon"))
                            #set ( $subItems = $item.getChildren())
                        <li #if( $subItems.size() > 0) data-toggle="collapse" data-target="#$itemId" class="collapsed" #end>
                          <a #if( $subItems.size() == 0) href="$itemName" #else href="#" #end>
                            <i class="$itemIcon" aria-hidden="true"></i>&nbsp;
                            $item.getAttribute("name")
                            #if( $subItems.size() > 0)
                                <span class="arrow"></span>
                            #end
                          </a>
                        </li>
                            #if( $subItems.size() > 0)
                            <ul class="sub-menu collapse" id="$itemId">
                                #foreach ( $subItem in $subItems )
                                    #set( $subHref = $subItem.getAttribute("href"))
                                <li><a href="$subHref">$subItem.getAttribute("name")</a></li>
                                #end
                            </ul>
                            #end
                        #end
                    </ul>
                </div>
            </div>
        </div>
        <div id="m-doc-frame" class="col-xs-12 col-sm-10 col-md-10">
        </div>
  </div>
